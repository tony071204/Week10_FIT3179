{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 450,
  "title": "Local vs. foreign tourists in hotels 2022(log scale)",
  "data": {
    "url": "https://raw.githubusercontent.com/tony071204/Week10_FIT3179/refs/heads/main/Domestic%20vs%20foreign%20tourists%20staying%20in%20hotels%202022.csv"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "Region_selection == null || datum.Region == Region_selection"}
  ],
  "encoding": {
    "x": {
      "field": "Foreign guests in hotels ",
      "type": "quantitative",
      "title": "Foreign tourists staying in hotels",
      "scale": {"type": "log", "domain": [10000, 200000000]},
      "axis": {
        "format": "~s",
        "grid": false,
        "tickCount": 6,
        "ticks": false,
        "titleFont": "sans-serif",
        "titleFontSize": 12,
        "labelFont": "sans-serif",
        "labelFontSize": 11
      }
    },
    "y": {
      "field": "Domestic tourists staying in hotels ",
      "type": "quantitative",
      "title": "Domestic tourists staying in hotels",
      "scale": {"type": "log", "domain": [1000, 1000000000]},
      "axis": {
        "format": "~s",
        "grid": false,
        "tickCount": 6,
        "ticks": false,
        "titleFont": "sans-serif",
        "titleFontSize": 12,
        "labelFont": "sans-serif",
        "labelFontSize": 11
      }
    }
  },
  "layer": [
    {
      "mark": {"type": "circle", "size": 300, "opacity": 0.7},
      "encoding": {
        "color": {
          "field": "Region",
          "type": "nominal",
          "title": "Region",
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "range": [
              "#a65628",
              "#17becf",
              "#1f77b4",
              "#ff7f0e",
              "#2ca02c",
              "#9467bd"
            ]
          }
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Region", "type": "nominal", "title": "Region"},
          {
            "field": "Domestic tourists staying in hotels ",
            "type": "quantitative",
            "title": "Domestic Guests",
            "format": ","
          },
          {
            "field": "Foreign guests in hotels ",
            "type": "quantitative",
            "title": "Foreign Guests",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Entity", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum.Entity == 'Indonesia' || datum.Entity == 'France' || datum.Entity == 'Italy' || datum.Entity == 'Australia' || datum.Entity == 'Argentina' || datum.Entity == 'Finland' || datum.Entity == 'Algeria' || datum.Entity == 'Bolivia' || datum.Entity == 'Eswatini' || datum.Entity == 'Japan' || datum.Entity == 'Montenegro'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif"
    }
  }
}